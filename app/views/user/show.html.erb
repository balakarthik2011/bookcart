<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "alert alert-success bodyLeftPadd" %>
<% end %>
<div class="container bodyPadd">
  <div class="col-sm-6 col-sm-offset-3 user-profile">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title text-center">Profile</h3></div>
      <div class="panel-body">

        <dl class="dl-horizontal">
          <dt><b>Name</b></dt>
          <dd><%= @user.name %></dd>
        </dl>

        <dl class="dl-horizontal">
          <dt><b>Email</b></dt>
          <dd><%= @user.email %></dd>
        </dl>
        
      </div>
      <div class="panel-footer text-center">
        <%= link_to 'Back', :back, class: "btn btn-primary" %>
      </div>
    </div>


  </div>
</div>